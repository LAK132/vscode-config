{
    //workbench settings
    "workbench.colorTheme": "Moonlit Outback",
    "workbench.startupEditor": "none",
    "workbench.activityBar.visible": true,
    "workbench.quickOpen.closeOnFocusLost": false,
    "workbench.settings.useSplitJSON": false,
    "workbench.sideBar.location": "left",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.centeredLayoutAutoResize": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editorAssociations": {
        "*.ipynb": "default",
        "*.bit": "default"
    },

    // editor settings
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.renderWhitespace": "boundary",
    "editor.fontFamily": "liganoki",
    "[verilog]": {
        "editor.fontLigatures": false,
    },
    "[vhdl]": {
        "editor.fontLigatures": false,
    },
    "editor.fontWeight": "normal",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.cursorStyle": "block",
    "editor.rulers": [ 79, 83 ],
    "editor.wordWrap": "wordWrapColumn",
    "[plaintext]": {
        "editor.rulers": [ ],
        "editor.wordWrap": "off"
    },
    "editor.wordWrapColumn": 79,
    "editor.wrappingIndent": "indent",
    "editor.detectIndentation": true,
    "editor.tabCompletion": "on",
    "editor.tabSize": 2,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.renderControlCharacters": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggestOnTriggerCharacters": true,
    "editor.quickSuggestionsDelay": 100,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.useTabStops": true,
    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.maxLineCount": 5,
    "editor.insertSpaces": false,
    "editor.accessibilitySupport": "off",

    // window settings
    "window.menuBarVisibility": "toggle",

    // file settings
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "*.C": "cpp",
        "*.cc": "cpp",
        "*.H": "cpp",
        "*.ih": "cpp",
        "*.inc": "cpp",
        "*.cake": "python"
    },

    // integrated terminal settings
    "terminal.integrated.fontFamily": "liganoki",
    "terminal.integrated.fontSize": 16,

    // zen mode settings
    "zenMode.centerLayout": true,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideTabs": true,
    "zenMode.fullScreen": false,
    "zenMode.hideActivityBar": true,
    "zenMode.hideStatusBar": true,
    "zenMode.restore": true,

    // explorer settings
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,

    // terminal settings
    "terminal.integrated.enableBell": true,

    "terminal.integrated.profiles.windows": {
        "wsl": {
            "path": "wsl.exe"
        },
        "cygwin": {
            "path": "C:\\cygwin64\\bin\\bash.exe",
            "args": [ "-l" ],
            "env": { "CHERE_INVOKING": "1" }
        }
    },
    "terminal.integrated.defaultProfile.windows": "wsl",

    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash"
        }
    },
    "terminal.integrated.defaultProfile.linux": "bash",

    // bread crumbs settings
    "breadcrumbs.enabled": true,

    // diff editor settings
    "diffEditor.ignoreTrimWhitespace": false,

    // indent to bracket settings
    "indent-to-bracket.useDefaultIndentationAfterEmptyBracket": false,

    // extension settings
    "extensions.ignoreRecommendations": true,

    // meson settings
    "mesonbuild.configureOnOpen": false,

    // cmake settings
    "cmake.configureOnOpen": false,

    // C/C++ settings
    "C_Cpp.formatting": "Disabled",
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.intelliSenseCacheSize": 5120,
    "C_Cpp.errorSquiggles": "Enabled",
    "C_Cpp.autocomplete": "Default",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++17",

    // stretch-spaces settings
    "stretchySpaces.targetIndentation": 2,
    "stretchySpaces.includedLanguages": ["cpp", "c", "rust"],
    "stretchySpaces.excludedLanguages": ["python"],

    // Scrolloff settings
    "scrolloff.alwaysCenter": true,

    // clang-format settings
    "clang-format.executable": "clang-format",
    // "editor.formatOnSaveMode": "modifications",
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "[rust]": {
        "editor.formatOnSave": true
    },

    // latex settings
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoBuild.run": "never",

    // git settings
    "git.confirmSync": false,
    "git.ignoreWindowsGit27Warning": true,
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.enabled": false
}
