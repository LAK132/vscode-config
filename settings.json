{
    //workbench settings
    "workbench.colorTheme": "Henna",
    "workbench.startupEditor": "none",
    "workbench.activityBar.visible": true,
    "workbench.quickOpen.closeOnFocusLost": false,
    "workbench.settings.useSplitJSON": false,
    "workbench.sideBar.location": "left",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.centeredLayoutAutoResize": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,

    // editor settings
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.renderWhitespace": "boundary",
    "editor.fontFamily": "'Pet Me 128 2Y', 'Ubuntu Mono'",
    "editor.fontWeight": "normal",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.cursorStyle": "block",
    "editor.rulers": [ 79, 83 ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 79,
    "editor.wrappingIndent": "indent",
    "editor.detectIndentation": true,
    "editor.tabCompletion": "on",
    "editor.tabSize": 2,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.renderControlCharacters": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggestOnTriggerCharacters": true,
    "editor.quickSuggestionsDelay": 100,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },

    // window settings
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,

    // file settings
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "*.C": "cpp",
        "*.H": "cpp",
        "*.cake": "python"
    },

    // integrated terminal settings
    "terminal.integrated.fontFamily": "'Pet Me 128 2Y', 'Ubuntu Mono'",
    "terminal.integrated.fontSize": 18,

    // zen mode settings
    "zenMode.centerLayout": true,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideTabs": true,
    "zenMode.fullScreen": false,
    "zenMode.hideActivityBar": true,
    "zenMode.hideStatusBar": true,
    "zenMode.restore": true,

    // explorer settings
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,

    // terminal settings
    "terminal.integrated.shell.windows": "C:\\cygwin64\\bin\\bash.exe",
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.shellArgs.windows": [ "-l" ],
    "terminal.integrated.shellArgs.linux": [ ],
    "terminal.integrated.env.windows": { "CHERE_INVOKING": "1" },
    "terminal.integrated.env.linux": { },

    // bread crumbs settings
    "breadcrumbs.enabled": true,

    // diff editor settings
    "diffEditor.ignoreTrimWhitespace": false,

    // indent to bracket settings
    "indent-to-bracket.useDefaultIndentationAfterEmptyBracket": false,

    // C/C++ settings
    "C_Cpp.formatting": "Disabled",
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.intelliSenseCacheSize": 5120,
    "C_Cpp.errorSquiggles": "Enabled",
    "C_Cpp.autocomplete": "Default",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++17",

    // latex settings
    "latex-workshop.view.pdf.viewer": "tab",

    // git settings
    "git.confirmSync": false,
}
